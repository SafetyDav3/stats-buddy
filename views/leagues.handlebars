{{> nav pageTitle}}
        <div class="row">
            {{> sidebar }}
              <div class="row container center">
                <form class="col card-panel l3 offset-l3" id="new-league">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">directions_walk</i>
                      <input id="league-input" type="text" class="validate">
                      <label for="league-input">New League's Name</label>
                      <button class="btn pink waves-effect waves-blue" type="submit" >Submit
                        <i class="material-icons right">send</i>
                        </button>
                    </div>
                  </div>
                </form>
              <br>

              <table class="highlight centered col l9 m9 s12">
                <thead>
                  <tr>
                      <th>Stats Buddy Leagues</th>
                  </tr>
                </thead>
        
                <tbody>
                    {{#each leagues}}
                  <tr>
                    <td><a href="/league/{{id}}">{{name}}</a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
        </div>
    </div>
{{> footer}}

<script src="/js/add-league.js"></script>