{{>nav pageTitle}}

    <div class="row">
        {{> sidebar }}
        
  
              <div class="row container center">
                <form class="col card-panel l3" id="add-player">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">directions_walk</i>
                      <input id="player-input" type="text" class="validate">
                      <label for="player-input">Add New Player's Name</label>
                      <button class="btn pink waves-effect waves-blue" type="submit">Submit
                        <i class="material-icons right">send</i>
                        </button>
                    </div>
                  </div>
                </form>

              <table class="highlight centered responsive-table col s4">
                <thead>
                    <tr>
                        <th>League Name:</th>
                        <th><a href="/league/{{players.league_id}}">{{players.league.name}}</a></th>
                        <th>Team Name:</th>
                        <th>{{players.team_name}}</th>
                        <th>Manager:</th>
                        <th>{{players.manager}}</th>
                    </tr>
                </thead>
              </table>

