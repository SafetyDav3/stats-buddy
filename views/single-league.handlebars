  {{> nav}}

    <div class="row">
      {{> sidebar}}
        <div class="row container center">
                <form class="col card-panel l3">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">directions_walk</i>
                      <input id="icon_prefix" type="text" class="validate">
                      <label for="icon_prefix">Add New Team's Name</label>
                      <button class="btn pink waves-effect waves-blue" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                        </button>
                    </div>
                  </div>
                </form>

              <table class="highlight centered responsive-table col s4">
                <thead>
                    <tr>
                        <th>League Name:</th>
                        <th>{{teams.name}}</th>
                    </tr>
                </thead>
              </table>

              <br>

              <table class="highlight centered responsive-table col l9 m9 s12">
                <thead>
                  <tr>
                      <th>Teams in League</th>
                  </tr>
                </thead>
        
                <tbody>

                  {{#each teams.teams}}
                  <tr>
                    <td><a href="/team/{{id}}">{{team_name}} managed by {{manager}}</a></td>
                  </tr>
                  {{/each}}
                
                </tbody>
              </table>
        </div>
  
      </div>

      {{> footer}}